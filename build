
GOLANG_VERSION=1.22.2
UPX_VERSION=3.96-2
PLATFORMS=linux/amd64,linux/arm64

docker buildx create --use                                && \
docker buildx build                                          \
    -f Dockerfile                                            \
    --build-arg "GOLANG_VERSION=${GOLANG_VERSION}"           \
    --build-arg "UPX_VERSION=${UPX_VERSION}"                 \
    --platform ${PLATFORMS}                                  \
    --push                                                   \
    -t mvkvl/golang_upx:${GOLANG_VERSION}_${UPX_VERSION} .
docker buildx rm
